page {
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background: #ccc;
    padding: 0;
}
.panel-top {
    width: 100%;
    height: 130px;
    border-bottom: 10px solid #fff;
    
}
.screen {
    height: 100%;
    /*text-align: right;*/
    font-size: 50px;
    font-weight: bold;
    color: #000;
    display: -webkit-box;
    -webkit-box-align: center;
    -webkit-box-pack: end;
}
.panel-bottom {
    width: 100%;
    flex: 1;
    background: #fff;
    display: flex;
    flex-direction: column;
}
.btn-groups {
    flex: 1;
    margin-top: 1px;
    
    display: flex;
    flex-direction: row;
}
.btn-groups .zero {
    width: 50%;
}
.item {
    font-size: 30px;
    flex: 1;
    margin-right: 1px;
    display: -webkit-box;
    -webkit-box-align: center;
    -webkit-box-pack: center;
    color: #fff;
}
.item-bottom {
    display: flex;
    flex-direction: row;
}
.no-right-margin {
    margin: 0;
}
.bg-orange {
    background: orange;
}
.bg-blue {
    background: blue;
}
.bg-red {
    background: red;
}
.bg-purple {
    background: purple;
}
